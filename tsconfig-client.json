{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./public/js",
    "rootDir": "./public/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["public/ts/**/*"],
  "exclude": ["node_modules", "dist"]
}
